{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node",
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "public/*"],
  "extends": "@tsconfig/svelte/tsconfig.json"
}